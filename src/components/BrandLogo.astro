---
import logoImage from "../images/logo.png";

export interface Props {
  size?: "default" | "small";
  class?: string;
  noWrap?: boolean;
}

const { size = "default", class: className, noWrap = false } = Astro.props;

// Define text size classes based on the size prop
const textSizeClasses = size === "small" 
  ? "text-lg font-bold leading-tight tracking-tight md:text-xl lg:text-2xl lg:leading-tight"
  : "text-2xl font-bold leading-tight tracking-tight md:text-3xl lg:text-4xl lg:leading-tight";
---

<div class={`flex items-center gap-1 py-2 transition-all duration-300 hover:scale-105 sm:gap-2 md:gap-3 lg:gap-5 ${className || ""}`}>
  <img
    src={logoImage.src}
    alt="Trade Guild Consulting Logo"
    class="h-8 w-auto object-contain drop-shadow-sm sm:h-10 md:h-12 lg:h-14 xl:h-16 flex-shrink-0"
  />
  <span class={`text-neutral-800 dark:text-neutral-200 ${textSizeClasses} ${noWrap ? 'whitespace-nowrap' : 'whitespace-nowrap xs:break-words xs:leading-tight sm:whitespace-nowrap md:break-words md:leading-tight lg:whitespace-nowrap'} min-w-0 flex-1`}>
    Trade Guild Consulting
  </span>
</div>
