---
import logoImage from "../images/logo.png";

export interface Props {
  size?: "default" | "small";
  class?: string;
  noWrap?: boolean;
}

const { size = "default", class: className, noWrap = false } = Astro.props;

// Define text size classes based on the size prop
const textSizeClasses = size === "small" 
  ? "text-lg font-bold leading-tight tracking-tight md:text-xl lg:text-2xl lg:leading-tight"
  : "text-2xl font-bold leading-tight tracking-tight md:text-3xl lg:text-4xl lg:leading-tight";
---

<div class={`flex items-center gap-2 py-2 transition-all duration-300 hover:scale-105 sm:gap-3 md:gap-5 ${className || ""}`}>
  <img
    src={logoImage.src}
    alt="Trade Guild Consulting Logo"
    class="h-10 w-auto object-contain drop-shadow-sm sm:h-12 md:h-14 lg:h-16"
  />
  <span class={`bg-gradient-to-r from-neutral-800 to-neutral-600 bg-clip-text text-transparent dark:from-neutral-200 dark:to-neutral-400 ${textSizeClasses} ${noWrap ? 'whitespace-nowrap' : ''}`}>
    Trade Guild Consulting
  </span>
</div>
