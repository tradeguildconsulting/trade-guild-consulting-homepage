---
export interface Props {
  size?: "default" | "small";
  class?: string;
  noWrap?: boolean;
}

const { size = "default", class: className, noWrap = false } = Astro.props;

// Define text size classes based on the size prop
const textSizeClasses = size === "small" 
  ? "text-lg font-bold leading-tight tracking-tight md:text-xl lg:text-2xl lg:leading-tight"
  : "text-2xl font-bold leading-tight tracking-tight md:text-3xl lg:text-4xl lg:leading-tight";
---

<div class={`flex items-center py-2 transition-all duration-300 hover:scale-105 ${className || ""}`}>
  <span class={`text-neutral-800 dark:text-neutral-200 ${textSizeClasses} ${noWrap ? 'whitespace-nowrap' : 'whitespace-nowrap xs:break-words xs:leading-tight sm:whitespace-nowrap md:break-words md:leading-tight lg:whitespace-nowrap'}`}>
    Trade Guild Consulting
  </span>
</div>
