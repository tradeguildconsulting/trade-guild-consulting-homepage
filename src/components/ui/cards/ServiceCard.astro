---
export interface Props {
  title: string;
  description: string;
  serviceUrl: string;
}

const { title, description, serviceUrl } = Astro.props;
---

<div class="group relative bg-white dark:!bg-neutral-800 border border-gray-200 dark:!border-neutral-700 rounded-xl shadow-sm dark:shadow-neutral-700/10 overflow-hidden hover:shadow-2xl hover:shadow-[#FE9002]/10 dark:hover:shadow-[#FE9002]/10 transition-all duration-500 hover:-translate-y-2 hover:scale-[1.02]">
  <!-- Content -->
  <div class="p-6 relative">
    <!-- Decorative Element -->
    <div class="absolute top-0 left-6 w-12 h-1 bg-gradient-to-r from-[#D89D40] to-[#FE9002] rounded-full transform -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
    
    <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-3 group-hover:text-[#FE9002] dark:group-hover:text-[#FE9002] transition-colors duration-300 group-hover:translate-x-1">
      {title}
    </h3>
    <p class="text-gray-600 dark:text-neutral-400 mb-6 line-clamp-3 group-hover:text-gray-700 dark:group-hover:text-neutral-300 transition-colors duration-300">
      {description}
    </p>
    
    <!-- Learn More Button -->
    <a
      href={serviceUrl}
      class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-[#FE9002] text-white hover:bg-[#e8820a] focus:outline-none focus:bg-[#e8820a] dark:bg-[#FE9002] dark:hover:bg-[#e8820a] dark:focus:bg-[#e8820a] transition-all duration-300 hover:shadow-lg hover:shadow-[#FE9002]/30 dark:hover:shadow-[#FE9002]/30 group-hover:scale-105"
    >
      Learn More
      <svg class="shrink-0 size-4 group-hover:translate-x-1 transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m9 18 6-6-6-6"></path>
      </svg>
    </a>
  </div>

  <!-- Enhanced Hover Effect -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#D89D40]/5 via-transparent to-[#FE9002]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
  
  <!-- Glow Effect -->
  <div class="absolute -inset-0.5 bg-gradient-to-r from-[#D89D40] to-[#FE9002] rounded-xl opacity-0 group-hover:opacity-20 blur transition-opacity duration-500 -z-10"></div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
