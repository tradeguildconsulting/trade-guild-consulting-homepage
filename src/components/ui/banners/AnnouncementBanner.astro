---
const { title, btnId, btnTitle, url } = Astro.props;

interface Props {
  title?: string;
  btnId: string;
  btnTitle: string;
  url: string;
}
---

<astro-banner btnId={btnId}>
  <div
    class="fixed bottom-0 start-1/2 z-50 mx-auto w-full -translate-x-1/2 transform p-6 sm:max-w-4xl"
    role="region"
    aria-label="Informational Banner"
  >
    <div
      class="relative rounded-xl bg-gradient-to-br from-white via-gray-50 to-white border border-gray-200 p-4 text-center shadow-lg hover:shadow-xl transition-all duration-300 dark:bg-gradient-to-br dark:from-neutral-800 dark:via-neutral-900 dark:to-neutral-800 dark:border-neutral-700 overflow-hidden"
    >
      <!-- Subtle background pattern -->
      <div class="absolute inset-0 opacity-[0.02] dark:opacity-[0.05]">
        <div class="absolute top-2 right-4 w-16 h-16 border border-gray-300 dark:border-neutral-600 rounded-full"></div>
        <div class="absolute bottom-2 left-6 w-8 h-8 bg-gray-200 dark:bg-neutral-700 rounded-full"></div>
        <div class="absolute top-1/2 right-1/3 w-4 h-4 bg-[#FE9002] opacity-20 rounded-full"></div>
        <div class="absolute bottom-4 right-8 w-2 h-2 bg-[#D89D40] opacity-30 rounded-full"></div>
      </div>
      
      <!-- Subtle shine effect -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full hover:translate-x-full transition-transform duration-1000 ease-in-out dark:via-white/5"></div>
      <div class="flex items-center justify-center">
        <div class="ml-auto">
          {title &&
          <p
            class="me-2 inline-block font-medium text-gray-800 dark:text-neutral-200"
          >
            {title}
          </p>
          }
          <a
            class="group inline-flex items-center gap-x-2 rounded-lg bg-[#FE9002] hover:bg-[#e8820a] active:bg-[#e8820a] px-4 py-3 text-sm font-bold text-neutral-50 shadow-sm hover:shadow-md transition duration-300 disabled:pointer-events-none disabled:opacity-50 outline-hidden ring-zinc-500 focus-visible:ring-3 dark:ring-zinc-200 dark:focus:outline-hidden"
            href={url}
            target="_blank"
          >
            {btnTitle}
            <svg
              class="size-4 shrink-0 transition duration-300 group-hover:translate-x-1"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
            >
          </a>
        </div>
        <button
          type="button"
          class="ml-auto inline-flex items-center gap-x-2 rounded-full border border-transparent bg-gray-100 hover:bg-gray-200 p-2 text-sm font-semibold text-gray-600 hover:text-gray-700 disabled:pointer-events-none disabled:opacity-50 transition duration-300 outline-hidden ring-zinc-500 focus-visible:ring-3 dark:bg-neutral-700 dark:hover:bg-neutral-600 dark:text-neutral-300 dark:hover:text-neutral-200 dark:ring-zinc-200 dark:focus:outline-hidden"
          id={btnId}
        >
          <span class="sr-only">Dismiss</span>
          <svg
            class="size-5 shrink-0"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
          >
        </button>
      </div>
      
      <!-- Enhanced glow effect on hover -->
      <div class="absolute -inset-0.5 bg-gradient-to-r from-[#D89D40]/20 via-[#FE9002]/20 to-[#D89D40]/20 rounded-xl opacity-0 hover:opacity-100 blur transition-opacity duration-500 -z-10"></div>
    </div>
  </div>
</astro-banner>
<script>
  class AstroBanner extends HTMLElement {
    connectedCallback() {
      const btnId = this.getAttribute("btnId");
      const button = this.querySelector(`#${btnId}`);
      if (button != null) {
        button.addEventListener("click", () => this.remove());
      }
    }
  }

  customElements.define("astro-banner", AstroBanner);
</script>
