 ---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-image.jpg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.jpg";
import teamCollaboration from "@images/features-image.jpg";
import digitalTools from "@images/digital-analytics.jpg";
import businessConsulting from "@images/before-after.jpg";
import { partnersData } from "@/data_files/constants";

---

<MainLayout>
  <HeroSection
    title=`Business Challenges? <span
        class="text-[#FE9002]">We've Got You Covered.</span>`
    subTitle="From business planning to exit strategy and everything in between, we know business inside and out. Whatever challenge you're facing, we have the expertise to help you overcome it and succeed."
    primaryBtn="Get Started"
    primaryBtnURL="/contact"
    secondaryBtn="View Services"
    secondaryBtnURL="/services"
    src={heroImage}
    alt="Professional business consulting team working on strategic planning"
  />

  <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry giants."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Why Choose Trade Guild Consulting?"
    subTitle="Because business isn't just what we do—it's what we know. Every member of our consulting team holds an MBA, bringing advanced knowledge and real-world experience to every project. We don't just give generic advice; we deliver strategies rooted in proven business principles and tailored to your unique goals."
    src={featureImage}
    alt="Professional business consulting team collaboration"
    features={features}
  />

  <FeaturesNavs
    title=`Explore <span class="text-[#FE9002]">Trade Guild Consulting</span>'s comprehensive services designed to transform your business.`
    tabs={[
      {
        heading: "Business Consulting",
        content:
          "From business planning to exit strategy, our MBA-level expertise helps you overcome challenges and achieve sustainable growth. We provide comprehensive business planning, strategic growth consulting, leadership coaching, operational efficiency improvements, financial consulting, and exit strategy planning. Our consultants combine academic expertise with real-world business acumen to deliver strategies that work.",
        svg: "strategy",
        src: businessConsulting,
        alt: "Business transformation before and after results",
        first: true,
      },
      {
        heading: "Digital Marketing",
        content:
          "Digital marketing isn't just about being online—it's about being seen, heard, and remembered. We create data-driven strategies including SEO optimization, PPC advertising, social media management, content marketing, email campaigns, and comprehensive analytics. Our approach builds digital ecosystems designed for growth, rooted in data and focused on results.",
        svg: "rocket",
        src: digitalTools,
        alt: "Digital marketing analytics and campaign management dashboard",
      },
      {
        heading: "Social Media Management",
        content:
          "Social media isn't just about posting content—it's about building connections and driving real business results. We provide organic social media management, paid social advertising, strategy development, influencer marketing, and team training. Our strategies foster genuine connections, boost brand awareness, and deliver measurable business outcomes.",
        svg: "community",
        src: teamCollaboration,
        alt: "Professional team collaborating on social media strategy and content creation",
      },
    ]}
  />


  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Ready to Transform Your Business?"
    subTitle="Let's discuss how our MBA-level expertise can help you overcome challenges and achieve your goals. Partner with Trade Guild Consulting for business success."
    url="/contact"
  />
</MainLayout>
