---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@/data_files/constants";

const pageTitle: string = `Social Media Marketing Services | ${SITE.title}`;
const metaDescription = "Engage, influence, and grow your social media presence. Our strategic social media marketing services help businesses build communities, drive engagement, and increase brand awareness.";
const ogTitle = "Social Media Marketing Services | Trade Guild Consulting";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "Service",
    "@id": "https://tradeguildconsulting.com/services/social-media-marketing",
    url: "https://tradeguildconsulting.com/services/social-media-marketing",
    name: "Social Media Marketing Services",
    description: metaDescription,
    provider: {
      "@type": "Organization",
      name: "Trade Guild Consulting",
      url: "https://tradeguildconsulting.com"
    },
    serviceType: "Social Media Marketing",
    areaServed: "Worldwide"
  }}
>
  <!-- Breadcrumb Navigation -->
  <nav class="mx-auto max-w-[85rem] px-4 py-4 sm:px-6 lg:px-8" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm text-gray-600 dark:text-neutral-400">
      <li>
        <a href="/" class="hover:text-[#FE9002] transition-colors">Home</a>
      </li>
      <li class="flex items-center">
        <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <a href="/services" class="hover:text-[#FE9002] transition-colors">Services</a>
      </li>
      <li class="flex items-center">
        <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="text-gray-800 dark:text-neutral-200 font-medium">Social Media Marketing</span>
      </li>
    </ol>
  </nav>

  <!-- Hero Section -->
  <section class="relative mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20 2xl:max-w-full overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-orange-50/30 to-yellow-50/20 dark:from-neutral-900 dark:via-neutral-900/95 dark:to-neutral-800/90"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-gradient-to-br from-[#D89D40]/10 to-[#FE9002]/10 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-32 h-32 bg-gradient-to-br from-[#FE9002]/10 to-[#D89D40]/10 rounded-full blur-xl animate-pulse" style="animation-delay: 2s;"></div>

    <div class="relative z-10 mx-auto max-w-4xl text-center">
      <!-- Icon -->
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-[#D89D40] to-[#FE9002] rounded-2xl mb-8 shadow-lg">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
        </svg>
      </div>

      <!-- Headline -->
      <h1 class="text-4xl font-bold text-neutral-800 dark:text-neutral-100 lg:text-6xl mb-6">
        Engage, Influence, and Grow.
      </h1>
      
      <!-- Decorative Line -->
      <div class="w-32 h-1 bg-gradient-to-r from-[#D89D40] to-[#FE9002] mx-auto mb-8 rounded-full"></div>
      
      <!-- Subheadline -->
      <p class="text-xl text-neutral-600 dark:text-neutral-300 max-w-3xl mx-auto leading-relaxed mb-10">
        Social media isn't just about posting content—it's about building communities, fostering relationships, and creating meaningful connections with your audience. We help you turn followers into customers and customers into advocates.
      </p>

      <!-- CTA Button -->
      <a
        href="/contact"
        class="inline-flex justify-center items-center gap-x-3 text-center bg-gradient-to-r from-[#D89D40] to-[#FE9002] hover:from-[#c8863a] hover:to-[#e8820a] border border-transparent text-white text-lg font-semibold rounded-xl focus:outline-none focus:ring-2 focus:ring-[#FE9002] focus:ring-offset-2 focus:ring-offset-white transition-all duration-300 py-4 px-8 shadow-lg hover:shadow-xl hover:shadow-[#D89D40]/25 dark:hover:shadow-[#FE9002]/25 hover:scale-105 dark:focus:ring-offset-gray-800"
      >
        Build Your Social Community
        <svg class="flex-shrink-0 w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
      </a>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20 2xl:max-w-full">
    <div class="mx-auto max-w-4xl">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 lg:text-4xl mb-4">
          Why Choose Trade Guild Consulting for Social Media Marketing?
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-[#D89D40] to-[#FE9002] mx-auto mb-6 rounded-full"></div>
      </div>

      <!-- Content -->
      <div class="bg-gradient-to-br from-[#D89D40]/5 via-orange-50/50 to-[#FE9002]/5 dark:from-[#FE9002]/5 dark:via-neutral-700/30 dark:to-[#D89D40]/5 rounded-2xl p-8 border border-[#D89D40]/20 dark:border-[#FE9002]/20">
        <p class="text-lg text-neutral-700 dark:text-neutral-300 leading-relaxed text-center">
          Because we understand that social media success isn't about vanity metrics—it's about building genuine relationships and driving real business results. We create strategies that engage your audience, build brand loyalty, and convert followers into customers.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20 2xl:max-w-full">
    <div class="mx-auto max-w-6xl">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 lg:text-4xl mb-4">
          Our Social Media Marketing Services Include:
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-[#D89D40] to-[#FE9002] mx-auto mb-6 rounded-full"></div>
      </div>

      <!-- Services Grid -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Social Media Strategy -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h6a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Social Media Strategy</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Develop comprehensive social media strategies that align with your business goals and resonate with your target audience.
          </p>
        </div>

        <!-- Content Creation -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Content Creation</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Create engaging, high-quality content including graphics, videos, and copy that captures attention and drives engagement.
          </p>
        </div>

        <!-- Community Management -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Community Management</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Build and nurture your online community through active engagement, responding to comments, and fostering meaningful conversations.
          </p>
        </div>

        <!-- Social Media Advertising -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Social Media Advertising</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Run targeted advertising campaigns across platforms to reach new audiences and drive conversions with precision targeting.
          </p>
        </div>

        <!-- Influencer Marketing -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Influencer Marketing</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Connect with relevant influencers and brand ambassadors to expand your reach and build authentic brand advocacy.
          </p>
        </div>

        <!-- Analytics & Reporting -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Analytics & Reporting</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Track performance metrics, analyze engagement data, and provide detailed reports to measure ROI and optimize strategies.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20 2xl:max-w-full bg-gray-50 dark:bg-neutral-900">
    <div class="mx-auto max-w-4xl">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 lg:text-4xl mb-4">
          Our Social Media Approach
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-[#D89D40] to-[#FE9002] mx-auto mb-6 rounded-full"></div>
      </div>

      <!-- Approach Steps -->
      <div class="space-y-8">
        <!-- Step 1 -->
        <div class="flex items-start">
          <div class="shrink-0 w-12 h-12 bg-gradient-to-br from-[#D89D40] to-[#FE9002] text-white rounded-xl flex items-center justify-center font-bold text-lg mr-6 shadow-lg">
            1
          </div>
          <div class="flex-1 bg-white dark:bg-neutral-800 rounded-xl p-6 border border-gray-200 dark:border-neutral-700">
            <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Audience Research & Strategy</h3>
            <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
              We start by understanding your target audience, their preferences, and behaviors to create a strategy that resonates.
            </p>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="flex items-start">
          <div class="shrink-0 w-12 h-12 bg-gradient-to-br from-[#D89D40] to-[#FE9002] text-white rounded-xl flex items-center justify-center font-bold text-lg mr-6 shadow-lg">
            2
          </div>
          <div class="flex-1 bg-white dark:bg-neutral-800 rounded-xl p-6 border border-gray-200 dark:border-neutral-700">
            <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Content Planning & Creation</h3>
            <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
              We develop content calendars and create engaging posts that tell your brand story and drive meaningful interactions.
            </p>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="flex items-start">
          <div class="shrink-0 w-12 h-12 bg-gradient-to-br from-[#D89D40] to-[#FE9002] text-white rounded-xl flex items-center justify-center font-bold text-lg mr-6 shadow-lg">
            3
          </div>
          <div class="flex-1 bg-white dark:bg-neutral-800 rounded-xl p-6 border border-gray-200 dark:border-neutral-700">
            <h3 class="text-xl font-bold text-neutral-800 dark:text-white mb-3">Active Community Management</h3>
            <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
              We actively engage with your community, respond to comments and messages, and foster positive relationships with your audience.
            </p>
          </div>
        </div>

        <!-- Step 4 -->
        <div class="flex items-start">
          <div class="shrink-0 w-12 h-12 bg-gradient-to-br from-[#D89D40] to-[#FE9002] text-white rounded-xl flex items-center justify-center font-bold text-lg mr-6 shadow-lg">
