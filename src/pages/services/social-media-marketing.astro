        <svg class="flex-shrink-0 w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
      </a>
    </div>
  </section>

  <!-- Related Services -->
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20 2xl:max-w-full bg-gray-50 dark:bg-neutral-900">
    <div class="mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 lg:text-4xl mb-4">
          Explore Our Other Services
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-[#D89D40] to-[#FE9002] mx-auto mb-6 rounded-full"></div>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        <!-- Business Consulting -->
        <a href="/services/business-consulting" class="group bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300 hover:-translate-y-1">
