    "@context": "https://schema.org",
    "@type": "Service",
    "@id": "https://tradeguildconsulting.com/services/business-consulting",
    url: "https://tradeguildconsulting.com/services/business-consulting",
    name: "Business Consulting Services",
    description: metaDescription,
    provider: {
      "@type": "Organization",
      name: "Trade Guild Consulting",
      url: "https://tradeguildconsulting.com"
    },
    serviceType: "Business Consulting",
    areaServed: "Worldwide"
