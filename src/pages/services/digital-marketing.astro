      </div>

      <!-- Services Grid -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Search Engine Optimization (SEO) -->
        <div class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-neutral-700 hover:shadow-lg hover:border-[#FE9002]/20 dark:hover:border-[#FE9002]/20 transition-all duration-300">
